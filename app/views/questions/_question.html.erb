<%= form_for question, remote: true do |f| %>
  <%= link_to question.title, question_path(question), id: 'show_question', remote: true %>
  <br>
  <% if (current_user) %>
    <% if (question.user_id == current_user.id) %>
      <%= link_to 'edit', edit_question_path(question), id: 'edit_question', remote: true %>
      <%= link_to 'remove', question, method: :delete, data: {confirm: 'Delete message?'}, remote: true %>
    <% else %>
      <%= link_to 'answer question', new_question_answer_path, id: 'new_answer', remote: true %>
    <% end %>
  <% end %>
<% end %>
